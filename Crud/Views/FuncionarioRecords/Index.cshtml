@model Crud.Models.Funcionario

@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimplesBusca">
            <fieldset>
                <legend>Simples Busca</legend>
                <div class="form-group">
                    <label asp-for="Matricula" class="control-label">Numero da matricula</label>
                    <div class="col-lg-10">
                        <input type="number" name="matricula" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

